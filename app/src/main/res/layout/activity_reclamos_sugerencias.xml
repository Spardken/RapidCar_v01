<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profileButton.ReclamosSugerenciasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sugerencias y Reclamos"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edtReclamo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Descripcion del reclamo o sugerencia"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgReclamo"
                android:layout_width="152dp"
                android:layout_height="129dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginEnd="10dp"
                tools:srcCompat="@drawable/ic_picture_avatar" />

            <Button
                android:id="@+id/btnSeleccionarImagenReclamo"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Seleccionar Imagen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEnviarReclamoSugerencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar Reclamo o Sugerencia" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>